---
interface Props {
    class: string;
    id: string;
}

const { class: className, id } = Astro.props;
---

<section
  id={id}
  data-section={id}
  class:list={[
    "section",
    className,
    "scroll-m-20",
    "mx-auto",
    "w-full",
    "max-w-screen-2xl",
    "px-4",
    "md:px-36",
  ]}
>
  <slot />
</section>
