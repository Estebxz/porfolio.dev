---
interface Props {
    href: string | null | undefined;
    title?: string;
    ariaLabel?: string;
    rel: string;
    target: "_blank" | "_self" | "_parent";
    class?: string | string[];
}

const { href: url = '', title, ariaLabel, rel, target, class: className = '' } = Astro.props;
---

<a
  href={url}
  title={title}
  aria-label={ariaLabel}
  rel={rel}
  target={target}
  class:list={["item-button", className]}
>
  <slot name="before" />
  <slot />
  <slot name="after" />
</a>

<style>
  .item-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.3rem;

    width: 100%;
    min-height: 44px;

    padding: 12px 16px;
    font-weight: 400;
    text-transform: uppercase;
    text-decoration: none;

    background: var(--color-primary-900);
    color: var(--color-alpha-100);
    border-radius: 0.4rem;

    transition: background-color 0.2s ease, transform 0.1s ease;
    white-space: normal;
  }
  
  .item-button:hover {
    background: var(--color-primary-700);
    transform: translateY(-1px);
  }
  
  .item-button:active {
    transform: translateY(0);
  }

  @media (min-width: 768px) {
    .item-button {
      width: auto;
      padding: 14px 20px;
      white-space: nowrap;
    }
  }

</style>
